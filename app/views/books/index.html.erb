<!DOCTYPE html>
<html>
<header>
  <h1>Books</h1>
</header>

<body>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id),class: 'btn-primary mr-3' %></td>
          <td><%= link_to 'Edit', edit_book_path(book),class: 'btn-primary mr-3' %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    <h2>New book</h2>
    <%= render 'books/error_form', book: @book %>
    <%= form_with model: @book, local:true do |f| %>
    <div class="box">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="box">
      <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="box">
    <%= f.submit 'Create Book' %>
    </div>
    <% end %>
</body>
</html>